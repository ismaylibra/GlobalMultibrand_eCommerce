@model SizeCreateViewModel


<div class="row col-lg-12">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Adding Size</h4>

                <form class="forms-sample" method="post" asp-action="create" en>

                    <div class="form-group">
                        <label asp-for="Name">Size</label>
                        <input asp-for="Name" class="form-control" placeholder="Please,Enter the Size">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>